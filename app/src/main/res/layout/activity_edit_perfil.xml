<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.fragments.EditPerfilActivity"
    android:background="@drawable/textura"
    android:backgroundTint="@color/fundo">


    <ImageView
        android:id="@+id/loginTela"
        android:layout_width="match_parent"
        android:layout_height="663dp"
        android:baselineAligned="false"
        android:scaleType="centerCrop"
        android:src="@drawable/fundo_branco_borda_cima"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="268dp"
        android:text="Edite seu perfil"
        app:layout_constraintEnd_toEndOf="@+id/loginTela"
        app:layout_constraintTop_toTopOf="@+id/loginTela" />

    <EditText
        android:id="@+id/labelEditNome"
        android:layout_width="331dp"
        android:layout_height="39dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="504dp"
        android:background="@drawable/label"
        android:hint="  Digite seu nome..."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/nome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="324dp"
        android:text="Nome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/labelEditEmail"
        android:layout_width="331dp"
        android:layout_height="37dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="408dp"
        android:background="@drawable/label"
        android:hint="  ex: jose@gmail.com"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/loginTela" />

    <TextView
        android:id="@+id/email2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="328dp"
        android:layout_marginBottom="444dp"
        android:text="Email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/loginTela" />

    <TextView
        android:id="@+id/senha3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="224dp"
        android:layout_marginBottom="252dp"
        android:text="Confirmação de senha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/labelEditSenha"
        android:layout_width="325dp"
        android:layout_height="38dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="308dp"
        android:background="@drawable/label"
        android:hint="  digite uma senha..."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/senha2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="324dp"
        android:layout_marginBottom="344dp"
        android:text="Senha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/labelAtualizarSenha"
        android:layout_width="325dp"
        android:layout_height="38dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="216dp"
        android:background="@drawable/label"
        android:hint="  confirme sua senha..."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnAtualizar"
        android:layout_width="298dp"
        android:layout_height="51dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/botao_princ"
        android:text="ATUALIZAR CADASTRO"
        app:layout_constraintBottom_toBottomOf="@+id/loginTela"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>